# AI Service Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000

# LangSmith API Configuration
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=RAG-AI-SERVICE

# Anthropic API Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Storage Paths
STORAGE_BASE_DIR=../storage
STORAGE_UPLOADED_DIR=../storage/uploaded
STORAGE_PROCESSED_DIR=../storage/processed
STORAGE_VECTORSTORE_DIR=../storage/vectorstore
STORAGE_TEMP_DIR=../storage/temp

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Other API Keys (add as needed)
# GOOGLE_API_KEY=your_google_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# COHERE_API_KEY=your_cohere_api_key_here